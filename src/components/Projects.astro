  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React.js",
    class: "bg-black text-white",
    icon: ReactJS,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-black text-[#FFC300]",
    icon: Firebase,
  },
  EXPRESS: {
    name: "Express.js",
    class: "bg-black text-white",
    icon: ExpressJS,
  },
  SOCKET: {
    name: "Socket.io",
    class: "bg-black",
    icon: Socket,
  },
  POSTGRES: {
    name: "PostgreSQL",
    class: "bg-[#d5d8dc] text-[#003159]",
    icon: Postgres,
  },
  AZURE: {
    name: "Azure",
    class: "bg-black text-white",
    icon: Azure,
  },
  VERCEL: {
    name: "Vercel",
    class: "bg-black text-white",
    icon: Vercel,
  },
  RAILWAY: {
    name: "Railway",
    class: "bg-black text-white",
    icon: Railway,
  },
